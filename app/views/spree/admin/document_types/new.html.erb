<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @document_type } %>

<% content_for :page_title do %>
  <%= t(:new_document_type) %>
<% end %>

<%= form_for [:admin, @document_type] do |f| %>
  <fieldset data-hook="new_document_type">
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.create'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_document_types_url, icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
