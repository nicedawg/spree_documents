<div data-hook="admin_document_form_fields" class="row">
  <div class="col-md-6">

    <div data-hook="name" class="form-group">
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div data-hook="internal_name" class="form-group">
      <%= f.label :internal_name, Spree.t(:internal_name) %>
      <%= f.text_field :internal_name, class: 'form-control' %>
      <p class="hint">Only change an existing internal name if you've checked with your developer!</p>
    </div>

  </div>
</div>
